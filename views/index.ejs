            <section id="video" class="video d-none">
              <div class="main-content">
                <div class="container-fluid main_div p-3 my-3">
                  <div class="text-end mb-3">
                    <button id="add-new-video" class="btn btn-danger">
                      Add New
                    </button>
                  </div>

                  <div class="row" id="video-row"></div>

                  <nav aria-label="Page navigation example">
                    <ul class="pagination m-0" id="video-pagination">
