                      <button
                        type="submit"
                        id="add-video-btn"
                        class="btn btn-success"
                      >
                        Add Video
                      </button>

                      <button
                        class="btn btn-success custom-btn d-none"
                        type="button"
                        id="video-process-btn"
                      >
                        <span
                          class="spinner-border spinner-border-sm"
                          aria-hidden="true"
                        ></span>
                        <span class="visually-hidden" role="status"
                          >Loading...</span
                        >
                      </button>
                    </div>
                  </form>
                </div>
