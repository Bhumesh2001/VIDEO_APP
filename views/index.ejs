            <!-- add new video -->
            <section class="add_new_videoPage d-none" id="new_video">
              <div class="main-content">
                <div class="form-container my-4" id="upload-video">
                  <h2 class="text-center heading">Add New Video</h2>

                  <form id="video-form" enctype="multipart/form-data">
                    <div class="form-group mb-3">
                      <label for="title">Title</label>
                      <input
                        type="text"
                        class="form-control"
                        id="title"
                        name="title"
                        placeholder="Enter video title"
                        required
                        autocomplete="off"
                      />
                    </div>

                    <div class="form-group mb-3">
                      <label for="description_">Description</label>
                      <textarea
                        class="form-control"
                        id="description_"
                        name="description"
                        placeholder="Enter video description"
                        rows="3"
                        required
                        autocomplete="off"
                      ></textarea>
                    </div>

                    <div class="form-group mb-3">
                      <label for="category">Category</label>
                      <select
                        class="form-control"
                        id="category"
                        name="category"
                        required
                      >
                        <option value="">Select category</option>
                        <option data-icon="fas fa-id-card">
                          Aadhaar Service
                        </option>
                        <option data-icon="fas fa-id-card-alt">
                          PAN Card Service
                        </option>
                        <option data-icon="fas fa-voter-id">
                          Voter Card Service
                        </option>
                        <option data-icon="fas fa-user-graduate">
                          UP Pension
                        </option>
                        <option data-icon="fas fa-building">PF (EPFO)</option>
                        <option data-icon="fas fa-file-invoice">
                          ITR Filing
                        </option>
                        <option data-icon="fas fa-industry">
                          Udyog Adhar (MSME)
                        </option>
                        <option data-icon="fas fa-hand-holding-usd">
                          PM Kisan Samman Nidhi
                        </option>
                        <option data-icon="fas fa-car">DL Service</option>
                        <option data-icon="fas fa-road">Parivahan Seva</option>
                        <option data-icon="fas fa-shield-alt">
                          UP Police Service
                        </option>
                        <option data-icon="fas fa-passport">
                          Passport Service
                        </option>
                        <option data-icon="fas fa-desktop">
                          E District UP
                        </option>
                        <option data-icon="fas fa-laptop">CSC Service</option>
                        <option data-icon="fas fa-file-upload">
                          File Converter
                        </option>
                        <option data-icon="fas fa-user-tie">
                          UP Labour Card Service
                        </option>
                        <option data-icon="fas fa-id-badge">
                          E Shram Card Service
                        </option>
                        <option data-icon="fas fa-image">Photoshop</option>
                        <option data-icon="fas fa-file-word">MS Word</option>
                        <option data-icon="fas fa-file-excel">Excel</option>
                      </select>
                    </div>

                    <div class="form-group mb-3">
                      <label for="thumbnail">Thumbnail</label>
                      <div class="custom-file">
                        <input
                          type="file"
                          class="custom-file-input"
                          id="thumbnail"
                          name="thumbnail"
                          accept="image/*"
                        />
                      </div>
                    </div>

                    <div class="form-group mb-3">
                      <label class="upload-label">Upload Method</label>
                      <div class="form-check form-check-inline">
                        <input
                          class="form-check-input"
                          type="radio"
                          name="uploadMethod"
                          id="uploadVideo"
                          value="upload"
                          checked
                        />
                        <label
                          class="form-check-label radio-label"
                          for="uploadVideo"
                          >Upload Video</label
                        >
                      </div>
                      <div class="form-check form-check-inline">
                        <input
                          class="form-check-input"
                          type="radio"
                          name="uploadMethod"
                          id="videoUrl"
                          value="url"
                        />
                        <label
                          class="form-check-label radio-label"
                          for="videoUrl"
                          >Video URL</label
                        >
                      </div>
                    </div>

                    <div class="form-group mb-3" id="videoUploadField">
                      <label for="video">Video File</label>
                      <div class="custom-file">
                        <input
                          type="file"
                          class="custom-file-input"
                          id="video"
                          name="video"
                          accept="video/*"
                        />
                      </div>
                    </div>

                    <div class="form-group mb-3" id="videoUrlField">
                      <label for="video-url">Video URL</label>
                      <input
                        type="url"
                        class="form-control"
                        id="video-url"
                        name="video-url"
                        placeholder="Enter video URL"
                        autocomplete="off"
                      />
                    </div>

                    <div
                      class="form-group text-center d-flex justify-content-between"
                    >
                      <button
                        type="button"
                        id="back-btn"
                        class="btn btn-danger"
                      >
                        Back
                      </button>
                      <button
                        type="submit"
                        id="add-video-btn"
                        class="btn btn-success"
                      >
                        Add Video
                      </button>

                      <button
                        class="btn btn-success custom-btn d-none"
                        type="button"
                        id="video-process-btn"
                      >
                        <span
                          class="spinner-border spinner-border-sm"
                          aria-hidden="true"
                        ></span>
                        <span class="visually-hidden" role="status"
                          >Loading...</span
                        >
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </section>

            <section id="article" class="article d-none">
              <div class="main-content">
                <div class="container-fluid main_div p-3 my-3">
