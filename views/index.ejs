            <!-- add new article -->
            <section class="add_new_article d-none" id="new_article">
              <div class="main-content">
                <div id="others-story" class="text-dark article my-4">
                  <div class="card story-card">
                    <h2 class="heading" id="new-article">Add New Article</h2>
                    <form id="article-form" enctype="multipart/form-data">
                      <div class="mb-3">
                        <label for="title_" class="form-label">Title</label>
                        <input
                          type="text"
                          class="form-control"
                          id="title_"
                          name="title"
                          placeholder="Enter article title"
                          required
                          autocomplete="off"
                        />
                      </div>

                      <div class="mb-3">
                        <label for="content_" class="form-label"
