            <section class="add_new_user d-none" id="new_user">
              <div class="main-content">
                <div class="container-fluid new__user my-4">
                  <h2 class="text-center heading">Add New User</h2>
                  <form id="adduser__" enctype="multipart/form-data">
                    <div class="mb-3">
                      <label for="name_" class="form-label">Name</label>
                      <input
                        type="text"
                        class="form-control"
                        id="name_"
                        placeholder="Enter your name"
                        required
                        name="name"
                        autocomplete="off"
                      />
                    </div>
                    <div class="mb-3">
                      <label for="email" class="form-label">Email</label>
                      <input
                        type="email"
                        class="form-control"
                        id="email_"
                        placeholder="Enter your email"
                        required
                        name="email"
                        autocomplete="off"
                      />
                    </div>
                    <div class="mb-3">
                      <label for="password" class="form-label">Password</label>
                      <input
                        type="password"
                        class="form-control"
                        id="password_"
                        placeholder="Enter your password"
                        required
                        name="password"
                        autocomplete="off"
                      />
                    </div>
                    <div class="mb-3">
                      <label for="mobileNumber" class="form-label"
